@model List<RecordIndexViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                   Пациент
                </th>
                <th>
                    Время
                </th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.SurName @record.MiddleName</td>
                    <td>@record.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a>Скачать</a> |
                        <a>Удалить</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No documents available.</p>
}
